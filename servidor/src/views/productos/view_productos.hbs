                                            <input type="text" value="{{Codigo}}" class="form-control"
                                                 id="" name="Codigo">
                                        </div>
                                            


                                        <div class="form-group">
                                            <label for="precio_venta">Precio Unitario</label>
                                            <input type="number" value="{{precio_unitario}}" class="form-control"
